{
  "name": "mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) JSON-RPC 2.0 Server",
  "main": "index.js",
  "scripts": {
    "build": "go build -o mcp-server ./cmd/mcp-server",
    "start": "go run ./cmd/mcp-server",
    "test": "./test.sh",
    "dev": "go run ./cmd/mcp-server"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "jsonrpc",
    "language-server",
    "vscode",
    "lsp"
  ],
  "author": "MCP Team",
  "license": "MIT",
  "mcpServer": {
    "command": "go",
    "args": ["run", "./cmd/mcp-server"],
    "cwd": ".",
    "env": {
      "DB_CONNECTION": "postgres://user:password@localhost/mcpdb?sslmode=disable"
    }
  },
  "contributes": {
    "mcpServers": {
      "studio-backend": {
        "command": "go",
        "args": ["run", "./cmd/mcp-server"],
        "env": {
          "DB_CONNECTION": "${env:DB_CONNECTION}"
        }
      }
    }
  }
}
