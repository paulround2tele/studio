{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch MCP JSON-RPC Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/mcp/cmd/mcp-server",
      "env": {
        "DB_CONNECTION": "postgres://user:password@localhost/mcpdb?sslmode=disable"
      },
      "args": [],
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug MCP JSON-RPC Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/mcp/cmd/mcp-server",
      "env": {
        "DB_CONNECTION": "postgres://user:password@localhost/mcpdb?sslmode=disable"
      },
      "args": [],
      "showLog": true,
      "console": "integratedTerminal",
      "stopOnEntry": false
    }
  ]
}
