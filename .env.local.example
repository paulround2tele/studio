# Authentication Configuration - NO HARDCODING
# Copy this file to .env.local and configure for your environment

# =============================================================================
# API Configuration - Dynamic Auto-Detection (NO HARDCODED LOCALHOST!)
# =============================================================================

# API URLs - Leave empty for auto-detection in development
# Production uses relative URLs automatically
# NEXT_PUBLIC_API_URL=
# NEXT_PUBLIC_SSE_URL=

# Override only if needed (e.g., custom backend location)
# NEXT_PUBLIC_API_URL=https://api.example.com
# NEXT_PUBLIC_SSE_URL=https://api.example.com/api/v2

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000

# Authentication Settings
NEXT_PUBLIC_AUTH_TIMEOUT=30000
NEXT_PUBLIC_AUTH_SESSION_TIMEOUT=15000
NEXT_PUBLIC_AUTH_MAX_RETRIES=2

# Loading Store Configuration
NEXT_PUBLIC_MAX_CONCURRENT_OPERATIONS=10

# SSE Configuration - uses auto-detection like API URLs
# Override only if needed:
# NEXT_PUBLIC_SSE_URL=https://api.example.com/api/v2

# Logging Configuration
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_LOGGING_ENDPOINT=
NEXT_PUBLIC_LOGGING_API_KEY=
NEXT_PUBLIC_MAX_LOG_ENTRIES=1000
NEXT_PUBLIC_LOG_BUFFER_SIZE=100

# Navigation Configuration
NEXT_PUBLIC_NAVIGATION_TIMEOUT=5000

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_THEME_STORAGE_KEY=domainflow-theme

# Performance Configuration
NEXT_PUBLIC_ENABLE_REQUEST_DEDUPLICATION=true
NEXT_PUBLIC_CACHE_TIMEOUT=300000

# Development Settings
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false