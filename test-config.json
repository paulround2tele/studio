{
  "environment": {
    "frontendUrl": "http://localhost:3000",
    "backendUrl": "http://localhost:8080",
    "testCredentials": {
      "email": "test@example.com",
      "password": "password123"
    }
  },
  "routes": {
    "login": "/login",
    "dashboard": "/dashboard", 
    "campaigns": "/campaigns",
    "logout": "/logout"
  },
  "timeouts": {
    "default": 30000,
    "navigation": 10000,
    "elementWait": 5000,
    "actionDelay": 2000
  },
  "directories": {
    "screenshots": "./test-screenshots",
    "reports": "./test-reports",
    "logs": "./test-logs"
  },
  "selectors": {
    "login": {
      "emailInput": "input[type=\"email\"], input[name=\"email\"], #email",
      "passwordInput": "input[type=\"password\"], input[name=\"password\"], #password",
      "submitButton": "button[type=\"submit\"], button:has-text(\"Login\"), .login-button"
    },
    "navigation": {
      "campaignsLink": "a[href*=\"campaign\"], .campaign-link",
      "dashboardLink": "a[href*=\"dashboard\"], .dashboard-link",
      "logoutButton": "button:has-text(\"Logout\"), .logout-button"
    },
    "dashboard": {
      "header": ".header, header, .dashboard-header",
      "sidebar": ".sidebar, .navigation, .nav-sidebar",
      "content": ".content, .main-content, .dashboard-content"
    },
    "campaigns": {
      "newCampaignButton": ".new-campaign-button, button:has-text(\"New Campaign\")",
      "campaignsList": ".campaigns-list, .campaign-grid",
      "campaignItem": ".campaign-item, .campaign-card"
    }
  },
  "testPhases": [
    {
      "name": "setup",
      "description": "Pre-test setup and validation",
      "enabled": true
    },
    {
      "name": "authentication",
      "description": "Authentication flow testing",
      "enabled": true
    },
    {
      "name": "dashboard",
      "description": "Dashboard navigation verification",
      "enabled": true
    },
    {
      "name": "campaigns",
      "description": "Campaigns page access and functionality",
      "enabled": true
    },
    {
      "name": "session",
      "description": "Session persistence testing",
      "enabled": true
    },
    {
      "name": "reporting",
      "description": "Post-test cleanup and reporting",
      "enabled": true
    }
  ],
  "mcpTools": {
    "serverName": "studio-backend-context",
    "tools": {
      "browserAutomation": "browse_with_playwright",
      "visualContext": "get_visual_context",
      "uiActions": "generate_ui_test_prompt_with_actions"
    }
  },
  "healthChecks": {
    "frontend": {
      "endpoint": "/api/health",
      "expectedStatus": 200,
      "timeout": 10000
    },
    "backend": {
      "endpoint": "/api/v2/health",
      "expectedStatus": 200,
      "timeout": 10000
    }
  },
  "reporting": {
    "formats": ["json", "txt", "html"],
    "includeScreenshots": true,
    "includeConsoleErrors": true,
    "includeTiming": true
  },
  "errorHandling": {
    "retryAttempts": 3,
    "retryDelay": 5000,
    "continueOnNonCriticalErrors": true,
    "criticalErrors": [
      "service_unavailable",
      "authentication_failed",
      "network_timeout"
    ]
  },
  "logging": {
    "level": "info",
    "includeTimestamp": true,
    "includePhase": true,
    "fileLogging": true
  }
}